@model ASPSampleRazor.Views.Student.IndexModel

@{
    ViewData["Title"] = "Students List";
}

<h2>Students List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            @* <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.EnrollmentDate)</th> *@
            <th>Name</th>
            <th>Email</th>
            <th>EnrollmentDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.StudentModel)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => student.Name)</td>
                <td>@Html.DisplayFor(modelItem => student.Email)</td>
                <td>@student.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@student.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@student.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
